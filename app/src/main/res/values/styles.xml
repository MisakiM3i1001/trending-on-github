<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BrandedLaunch" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/branded_launch</item>
    </style>


    <!--Text View-->
    <style name="TextViewTitle">
        <item name="android:textColor">@color/textViewBlazeRed</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textColor">@color/textViewOpaqueBlack</item>
        <item name="android:textSize">@dimen/descriptionSize</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!--Divider-->
    <style name="ItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerPlatinum</item>
    </style>

</resources>
